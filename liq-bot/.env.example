# Bybit API credentials
BYBIT_API_KEY=your_api_key_here
BYBIT_API_SECRET=your_api_secret_here

# Trading configuration
# Use 'demo' for Bybit Demo trading, 'testnet' for testnet, 'mainnet' for live
NETWORK=demo

# Position sizing (USD notional per trade)
POSITION_SIZE_USD=50

# Take profit percentage (0.3 = 0.3%)
TAKE_PROFIT_PCT=0.3

# Stop-loss: max % of initial account balance risked per position
SL_ACCOUNT_PCT=3

# Max concurrent positions
MAX_POSITIONS=5

# Minimum liquidation value to trigger (USD) - filters out tiny liqs
MIN_LIQ_VALUE_USD=10000

# Leverage
LEVERAGE=5

# Dashboard port
DASHBOARD_PORT=3000

# Bot port (WebSocket + API)
BOT_PORT=3001
